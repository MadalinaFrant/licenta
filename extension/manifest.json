{
    "manifest_version": 3,
    "name": "News Type Predictor",
    "version": "1.0",
    "description": "Predict the news type of selected text using a pre-trained model.",
    "permissions": [
        "activeTab",
        "contextMenus", 
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:5000/"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "512": "icons/icon512.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}
